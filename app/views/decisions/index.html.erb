<p id="notice"><%= notice %></p>

<h1>Listing Decisions</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Rating</th>
      <th>Comment</th>
      <th>Criterion</th>
      <th>Alternative</th>
      <th>Agreed decision</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @decisions.each do |decision| %>
      <tr>
        <td><%= decision.username %></td>
        <td><%= decision.rating %></td>
        <td><%= decision.comment %></td>
        <td><%= decision.criterion_id %></td>
        <td><%= decision.alternative_id %></td>
        <td><%= decision.agreed_decision_id %></td>
        <td><%= link_to 'Show', decision %></td>
        <td><%= link_to 'Edit', edit_decision_path(decision) %></td>
        <td><%= link_to 'Destroy', decision, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

